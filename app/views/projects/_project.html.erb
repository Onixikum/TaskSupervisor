<div class="container-fluid">
  <div class="project">

    <a><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></a>

    <%= project.name %>

    <%= link_to edit_user_project_path(id: project.id, user_id: current_user.id) do %>
      <span class="glyphicon glyphicon-pencil glyphicon-option" style="float: right" aria-hidden="true"></span>
      Edit
    <% end %>

    <%= link_to user_project_path(id: project.id, user_id: current_user.id), method: :delete,
                        data: { confirm: "You sure?" } do %>
      <span class="glyphicon glyphicon-trash glyphicon-option" style="float: right" aria-hidden="true"></span>
      Delete
    <% end %>


  </div>
</div>
